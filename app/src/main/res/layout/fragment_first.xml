<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context="com.example.dell.shopingdemo.fragments.FirstFragment">

   <android.support.design.widget.TabLayout
       android:layout_width="match_parent"
       android:id="@+id/tablayout_id"
       app:tabSelectedTextColor="@color/tab_selected_textcolor"
       app:tabTextColor="@color/tab_normal_textcolor"
       app:tabBackground="@color/tab_bg"
       android:layout_height="50dp" />
    <android.support.v4.view.ViewPager
        android:id="@+id/first_viewpager"
        android:layout_width="match_parent"
        android:layout_height="match_parent"/>

</LinearLayout>
